#include <stdio.h>

int main()
{
    int number;
    printf("Choose the number(1-5)-");
    scanf("%d",&number);
    
    switch(number)
    {
        case 1:
        printf("Food Item-Pizza\n");
        printf("Price-239");
        break;
        
        case 2:
        printf("Food Item-Burger\n");
        printf("Price-129");
        break;
        
        case 3:
        printf("Food Item-Pasta\n");
        printf("Price-179");
        break;
        
        case 4:
        printf("Food Item-French Fries\n");
        printf("Price-99");
        break;
        
        case 5:
        printf("Food Item-Sandwich\n");
        printf("Price-149");
        break;
        
        default:
        printf("Choose a number from the list");
    }
    
    return 0;
}
